                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutclassroom"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/classroom"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayoutlockerroom"
                app:layout_constraintStart_toStartOf="@+id/constraintLayoutlockerroom"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayoutlockerroom"
